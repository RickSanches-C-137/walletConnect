    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    <style>
        .hidden {
            display: none;
        }

        .modal {
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: #2d2d2d;
            border-radius: 0.375rem;
            padding: 2rem;
            max-width: 500px;
            width: 100%;
            margin: auto;
        }

        .form-dropdown select,
        .form-dropdown textarea,
        .form-dropdown input {
            background-color: #1f1f1f;
            color: #ddd;
            border: 1px solid #444;
            border-radius: 0.375rem;
            padding: 0.5rem;
            width: 100%;
        }

        .form-dropdown textarea {
            resize: vertical;
        }

        .form-footer {
            margin-top: 1rem;
        }

        .connect-btn,
        .cancel-btn {
            background-color: #4caf50;
            color: #fff;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 0.375rem;
            font-weight: bold;
        }

        .cancel-btn {
            background-color: #f44336;
        }

        .connect-btn:hover,
        .cancel-btn:hover {
            opacity: 0.8;
        }
    </style>

</head>

<body class="bg-gray-900 text-white">
    <div class="container mx-auto p-4">
        <h1 class="text-4xl font-bold mb-4">Dashboard</h1>

        <!-- Welcome Message -->
        <p class="text-xl mb-4">Welcome, <%= user.email %>
        </p>
        <p class="text-xl mb-6">Total Points: <span id="totalPoints"></span></p>

        <!-- Connect Wallet Button -->
        <div class="mb-4">
            <button id="connectWalletButton"
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Connect Wallet
            </button>
        </div>

        <!-- Rewards Sections -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- My Rewards Section -->
            <div>
                <h2 class="text-2xl font-bold mb-2">My Rewards</h2>
                <div class="bg-gray-800 p-4 rounded-md">
                    <% if (myRewards.length> 0) { %>
                        <ul>
                            <% myRewards.forEach(userReward=> { %>
                                <li class="mb-2 p-2 border-b border-gray-700">
                                    <h3 class="text-xl font-semibold">
                                        <%= userReward.rewardId.name %>
                                    </h3>
                                    <p class="reward-points" data-points="<%= userReward.rewardId.points %>">
                                        Points: <%= userReward.rewardId.points %>
                                    </p>
                                    <p class="text-green-300">Claimed: <%= new
                                            Date(userReward.createdAt).toLocaleString() %>
                                    </p>
                                </li>
                                <% }); %>
                        </ul>
                        <% } else { %>
                            <p>No rewards claimed yet.</p>
                            <% } %>
                </div>
            </div>

            <!-- Available Rewards Section -->
            <div>
                <h2 class="text-2xl font-bold mb-2">Available Rewards</h2>
                <div class="bg-gray-800 p-4 rounded-md">
                    <% if (rewards.length> 0) { %>
                        <ul>
                            <% rewards.forEach(reward=> { %>
                                <li class="mb-2 p-2 border-b border-gray-700">
                                    <h3 class="text-xl font-semibold">
                                        <%= reward.name %>
                                    </h3>
                                    <p>
                                        <%= reward.description %>
                                    </p>
                                    <form action="/claim-reward" method="POST" class="claim-form">
                                        <input type="hidden" name="rewardId" value="<%= reward._id %>">
                                        <input type="hidden" name="userId" value="<%= user._id %>">
                                        <button type="submit"
                                            class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                                            Claim Reward
                                        </button>
                                    </form>
                                </li>
                                <% }); %>
                        </ul>
                        <% } else { %>
                            <p>No rewards available.</p>
                            <% } %>
                </div>
            </div>
        </div>
    </div>

